{
  "root": true,
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["import", "jsx-a11y", "react", "react-hooks"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": "warn",
    "curly": "warn",
    "semi": "error",
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
